{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}

